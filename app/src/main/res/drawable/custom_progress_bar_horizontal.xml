<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="25dip" />
            <gradient
                android:startColor="@color/startColorBackground"
                android:centerColor="@color/centerColorBackground"
                android:centerY="0.75"
                android:endColor="@color/endColorBackground"
                android:angle="270"
                />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="25dip" />
                <gradient
                    android:startColor="@color/startColorSecondaryProgress"
                    android:centerColor="@color/centerColorSecondaryProgress"
                    android:centerY="0.75"
                    android:endColor="@color/endColorSecondaryProgress"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>
    <item
        android:id="@android:id/progress"
        >
        <clip>
            <shape>
                <corners
                    android:radius="25dip" />
                <gradient
                    android:startColor="@color/startColorProgress"
                    android:endColor="@color/endColorProgress"
                    android:angle="270" />
            </shape>
        </clip>
    </item>

    </layer-list>
